# Server Configuration
PORT=4000
NODE_ENV=development

# Solana Configuration
SOLANA_NETWORK=mainnet
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# For production, use a dedicated RPC provider like Helius, QuickNode, or Alchemy
# SOLANA_RPC_URL=https://your-custom-rpc.com

# Wallet Configuration
WALLET_PUBLIC_KEY=your_wallet_public_key_here
# For read-only monitoring, you only need the public key
# IMPORTANT: NEVER commit your actual wallet private key to version control
# WALLET_PRIVATE_KEY=your-base58-private-key-here (only for real transactions)

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/raydium_lp_manager
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=raydium_lp_manager
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Pyth Price Oracle
PYTH_PROGRAM_ID=gSbePebfvPy7tRqimPoVecS2UsBvYv46ynrzWocc92s

# Automation Settings
AUTO_REBALANCE_ENABLED=false
AUTO_COMPOUND_ENABLED=false
POSITION_CHECK_INTERVAL_MS=60000
MIN_HARVEST_THRESHOLD_USD=10
MAX_GAS_COST_USD=5

# Telegram Notifications (optional but recommended)
# Get bot token from @BotFather on Telegram
# Get chat ID by messaging your bot and visiting: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Security
JWT_SECRET=your-secret-key-here
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
